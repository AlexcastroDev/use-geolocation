  "license": "MIT",
  "publishConfig": {
    "source": "src/index.ts",
    "main": "dist/index.js"
  },
  "source": "src/index.ts",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.module.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "geolocation",
    "geolocation-js",
    "geolocation-api",
    "react-geolocation",
    "vue-geolocation",
    "angular-geolocation"
  ],
  "files": [
    "dist/**.js*",
    "dist/**/*.ts"
  ],
  "scripts": {
    "build": "microbundle --tsconfig ./tsconfig.json --generateTypes",
    "dev": "microbundle watch",
    "types": "tsc src/index.ts --declaration --outDir types",
    "test": "jest",
    "test:ci": "jest && jest-coverage-badges --output './badges'",
    "prepare": "husky install",
    "prettier": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  }
}
